# Dockerfile para o Scheduler de Importa√ß√µes
FROM python:3.11-slim

# Configurar ambiente
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# Instalar depend√™ncias do sistema
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Criar diret√≥rio
WORKDIR /app

# Copiar requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo
COPY . .

# Criar diret√≥rio de logs
RUN mkdir -p logs

# Criar script de entrada
RUN echo '#!/bin/bash\n\
cd /app\n\
echo "üöÄ Iniciando scheduler de importa√ß√µes..."\n\
# Aguardar backend estar pronto\n\
sleep 30\n\
# Executar comando passado\n\
exec "$@"' > /entrypoint.sh && chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]

# Comando padr√£o (pode ser sobrescrito)
CMD ["python", "scheduler.py", "test"]